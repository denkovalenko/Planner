@{
    ViewBag.Title = "План";
}
@model List<Domain.Models.ScientificPublishing>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Головна сторінка
            <small>Панель</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Планувальник</a></li>
            <li class="active">План</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-2 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-gray-light">
                    <a href="~/Plan/Create" class="inner btn-block">Створити <i class="glyphicon glyphicon-pencil"></i></a>
                </div>
            </div>
        </div>
        @if (Model != null && Model.Count != 0)
        {
            <div class="row">

                <table class="table table-striped table-bordered col-lg-10">
                    <thead>
                        Плани

                        <tr>
                            <th>Видання монографій (кількість)</th>
                            <th>у вітчизняний виданнях</th>
                            <th>у зарубіжних виданнях</th>
                            <th>Всього публікацій</th>
                            <th>наукові публікаціі в Scopus (кількість)</th>
                            <th>публікацій (статі, тези), у виданнях, що входять до міжнародних науково- метричних баз даних (кількість)</th>
                            <th>наукові публікації у зарубіжних виданнях (кількість)</th>
                            <th>статті у фахових видання (кількість)</th>
                            <th>публікація наукових статей іноземною мовою (кількість)</th>
                            <th>тези доповідей (кількість)</th>
                            <th>Рік</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var plan in Model)
                        {
                            <tr>
                                <td>@plan.Monographs</td>
                                <td>@plan.MonographsNationalPublications</td>
                                <td>@plan.MonographsForeignJournals</td>
                                <td>@plan.AllPublications</td>
                                <td>@plan.ScientificPublicationsInScopus</td>
                                <td>@plan.ArticlesThesesInNmbd</td>
                                <td>@plan.ScientificPublicationsInForeignJournals</td>
                                <td>@plan.ArticlesInProfessionalPublications</td>
                                <td>@plan.ScientificArticlesInForeignLanguages</td>
                                <td>@plan.Abstracts</td>
                                <td>@plan.Year</td>
                            </tr>
}

                    </tbody>


                </table>
            </div>}
        else
        {
            <p>У вас ще немає плану</p>}
    </section>
</div><!-- /.content-wrapper -->
