@model Domain.Models.ScientificPublishing
@{    
    ViewBag.Title = "Створення плану";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Головна сторінка
            <small>Панель</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Планувальник</a></li>
            <li class="active">План</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <section class="col-lg-12 connectedSortable">

                <!-- quick email widget -->
                <div class="box box-info">
                    <div class="box-header">
                        <i class="fa fa-envelope"></i>
                        <h3 class="box-title">План</h3>
                        <!-- tools box -->
                        <div class="pull-right box-tools">
                            <button class="btn btn-info btn-sm" data-widget="remove" data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>
                        </div><!-- /. tools -->
                    </div>
                    <div class="box-body">
                        <form action="~/Plan/Create" method="post" name="CreatePlan" novalidate>
                            
                            <div class="form-group">
                                <input type="text" class="form-control" name="Monographs" placeholder="Видання монографій (кількість)">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="MonographsNationalPublications" placeholder="у вітчизняний виданнях">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="MonographsForeignJournals" placeholder="у зарубіжних виданнях">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="AllPublications" placeholder="Всього публікацій">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="ScientificPublicationsInScopus" placeholder="наукові публікаціі в Scopus (кількість)">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="ArticlesThesesInNmbd" placeholder="публікацій (статі, тези), у виданнях з міжнародних науково-метричних баз даних (кількість)">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="ScientificPublicationsInForeignJournals" placeholder="наукові публікації у зарубіжних виданнях (кількість)">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="ArticlesInProfessionalPublications" placeholder="статті у фахових видання (кількість)">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="ScientificArticlesInForeignLanguages" placeholder="публікація наукових статей іноземною мовою (кількість)">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="Abstracts" placeholder="тези доповідей (кількість)">
                            </div>
                            <div class="form-group">
                                <input type="number" class="form-control" name="Year" placeholder="Рік">
                            </div>


                            
                            <div class="box-footer clearfix">
                                <input type="submit" class="pull-right btn btn-default" value="Додати" />
                            </div>
                        </form>
                    </div>

                </div>

            <script>
                var year = document.forms['CreatePlan']['Year'];
                year.min = (new Date()).getFullYear()-2;
                year.max = (new Date()).getFullYear() + 5;
            </script>

            </section><!-- /.Left col -->
            <!-- right col (We are only adding the ID to make the widgets sortable)-->

        </div><!-- /.row (main row) -->

    </section><!-- /.content -->
</div><!-- /.content-wrapper -->

